{
    "extends": "@sapphire/ts-config",
    "compilerOptions": {

        // Module stuff
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,

        // Compilation directories
        "rootDir": "src",
        "outDir": "dist",
        "incremental": true,
        "composite": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",

        // Paths and such
        "baseUrl": "./src",
        "paths": {
            "#structs/*": ["./lib/structures/*"],
            "#types/*": ["./lib/typedefs/*"],
            "#helpers/*": ["./lib/helpers/*"],
            "#lib/*": ["./lib/*"]
        },

        "ignoreDeprecations": "5.0"
    }

}